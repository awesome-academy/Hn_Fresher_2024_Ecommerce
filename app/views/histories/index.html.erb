<!-- History Purchase Section Begin -->
<section class="shopping-cart spad">
  <div class="container-fluid">
    <%= render "shared/alert_message" %>
    <div class="row">
      <div class="col-lg-1">
      </div>
      <div class="col-lg-5">
        <div class="shopping__cart__table">
          <table>
            <thead>
            <tr>
              <th><%= t("pages.bill.order_date") %></th>
              <th><%= t("pages.bill.into_money") %></th>
              <th><%= t("pages.bill.status.title") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <%= render "bill_item" %>
            </tbody>
          </table>
        </div>
        <div class="row mb-4">
          <div class="col-lg-12">
            <%== pagy_bootstrap_nav @pagy %>
          </div>
        </div>
        <%= render "carts/continue_shopping" %>
      </div>
      <%= render_bill_info %>
    </div>
  </div>
</section>
<!-- History Purchase Section End -->
