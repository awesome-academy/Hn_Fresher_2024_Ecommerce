<div class="col-sm-10 mt-5">
  <div class="white-box mt-5 bg-white pl-5 ps-5 pt-2">
    <h3 class="box-title mb-1 mt-4 font-weight-bold"><%= t("pages.admin.product_management.title") %></h3>
    <%= link_to t("pages.admin.product_management.new"), new_admin_product_path, class: "btn btn-primary mb-1 btn-sm" %>
    <div class="d-flex">
      <h6 class="ml-3 mt-2 font-weight-bold ml-1"><%= (t("pages.bill.status.title")).upcase %>: &ensp;</h6>
      <div class="mb-3">
        <%= form_with url: admin_products_path, method: :get, remote: true do |f| %>
          <%= f.select :status, options_for_select(product_status_options, @status), {}, { class: "p-1", onchange: "this.form.submit();" } %>
        <% end %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-lg-6 col-md-6">
        <%= render "shared/alert_message" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table text-nowrap mt-2">
        <thead>
        <tr>
          <th class="border-top-0"><%= t("pages.admin.product_management.name") %></th>
          <th class="border-top-0 text-center"><%= t("pages.admin.product_management.brand") %></th>
          <th class="border-top-0 text-center"><%= t("pages.admin.product_management.category") %></th>
          <th class="border-top-0 text-center"><%= t("pages.bill.status.title") %></th>
          <th class="border-top-0 text-center"><%= t("pages.admin.product_management.description") %></th>
          <th class="border-top-0 text-center"></th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: "admin/products/product", collection: @products %>
        </tbody>
      </table>
    </div>
  </div>
  <%= render "shared/paging" %>
</div>
