<div class="col-sm-10 mt-5">
  <div class="white-box mt-5 bg-white pl-5 ps-5 pt-2">
    <h3 class="box-title mb-3 mt-4 font-weight-bold"><%= t("pages.admin.user_management.title") %></h3>
    <div class="row mb-2">
      <%= render "admin/users/attention" %>
      <div class="col-lg-6 col-md-6">
        <%= render "shared/alert_message" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table text-nowrap mt-2">
        <thead>
        <tr>
          <th class="border-top-0">#</th>
          <th class="border-top-0"><%= t("pages.admin.user_management.name") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.email") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.phone") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.role") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.status") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.created_date") %></th>
          <th class="border-top-0"><%= t("pages.admin.user_management.updated_date") %></th>
          <th class="border-top-0"></th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: "admin/users/user", collection: @users %>
        </tbody>
      </table>
    </div>
  </div>
  <%= render "shared/paging" %>
</div>
